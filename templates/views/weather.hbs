<!doctype html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}

    {{!-- main header --}}
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_conteent">
                    <form class="temp_form">
                        <span class="search_icon"><i class="fa fa-magnifying-glass icon"></i></span>
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">tuesday</p>
                        <p id="live_time">00:00</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- footer code --}}
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
    
  $(document).ready(function(){
    $('.icon').click(function(){
      $('#cityName').focus();
      $('.icon').hide();
      $('#cityName').css({"padding":"2rem 5rem 2rem 2rem"});
      $('#submitBtn').css({"padding":"0 1rem"});
    });
  });
  
    </script>
</body>

</html>